<h2 class="mt-4">スケジュール一覧</h2>
<div class="row mt-4">
  <div class="col-md-12">
    <table class="table table-striped table-bordered">
      <thead class="thead-light">
        <tr>
          <th>ID</th>
          <th>タイトル</th>
          <th>開始日</th>
          <th>終了日</th>
          <th>終日</th>
          <th>スケジュール更新日時</th>
          <th>確認</th>
          <th>編集</th>
          <th>削除</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.id %></td>
            <td><%= task.title %></td>
            <td><%= task.start %></td>
            <td><%= task.end %></td>
            <td><% if task.shujitu %>
                <%= " ◯ " %>
                <% end %>
            </td>
            <td><%= task.updated_at %></td>
            <td><%= link_to("確認", "/tasks/#{task.id}") %></td>
            <td><%= link_to("編集", "/tasks/#{task.id}/edit") %></td>
            <td><%= link_to("削除", "/tasks/#{task.id}/destroy", {method: "post"}) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= link_to("スケジュール新規作成", "/tasks/new") %>